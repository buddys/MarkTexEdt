<Window x:Class="MarkTexEdt.window.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="关于" SizeToContent="Height" Width="300px">
    <Grid>
        <StackPanel Margin="10">
            <Label FontSize="20" FontStyle="Oblique" HorizontalAlignment="Center" Margin="15">MarkTex</Label>
            
            <TextBlock TextWrapping="WrapWithOverflow">
                MarkTex 是基于Markdown的可扩展引擎文档排版系统（a document preparation system based on markdown）。
                <LineBreak></LineBreak><LineBreak></LineBreak>
                作者：Little Buddys
                <LineBreak></LineBreak>
                联系：pkubuddys@126.com
            </TextBlock>
            <Button HorizontalAlignment="Right" Margin="0,10,0,0" DockPanel.Dock="Bottom" Width="70" Height="25"  IsDefault="True" IsCancel="True">确定</Button>
        </StackPanel>
    </Grid>
</Window>
